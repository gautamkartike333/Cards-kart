datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Model for the Users table
model User {
  User_id     Int           @id @default(autoincrement())
  username      String        @unique
  email         String        @unique
  password      String
  game_sessions GameSession[] @relation("PlayersPlayed")
  games_won     GameSession[] @relation("GameWinner")
}

model GameSession {
  gameID         String       @id @default(uuid())
  game_timeStamp DateTime     @default(now())
  winner         User?      @relation("GameWinner", fields: [winnerId], references: [User_id])
  winnerId       Int?         // Foreign key winner ke liye 
  players_played User[]     @relation("PlayersPlayed")
}
